extends ../base

block app-title
        | rides

block content
    div.all-rides-container
        .row
            form.form-horizontal(action='/rides', method='post')
                fieldset
                        .col-lg-3.matchheight
                            label.control-label(for="tb-from-city") From city:
                            input.form-control(id="tb-from-city", type="text", name="fromCity")
                        .col-lg-3.matchheight
                            label.control-label(for="tb-to-city") To city:
                            input.form-control(id="tb-from-city", type="text", name="toCity")
                        .col-lg-2.matchheight
                            label.control-label(for="tb-start-date") From date
                            #startdatepicker.input-group.date
                                    input.form-control(id="tb-start-date", type="text", name="startDate")
                                    span.input-group-addon
                                        span.glyphicon.glyphicon-calendar
                        .col-lg-2.matchheight
                            label.control-label(for="tb-end-date") To date:
                            #enddatepicker.input-group.date
                                    input.form-control(id="tb-end-date", type="text", name="endDate")
                                    span.input-group-addon
                                        span.glyphicon.glyphicon-calendar
                        .col-lg-2.matchheight.search-btn
                            input.btn.btn-success.btn-special(type="submit", value="Search")
            div(id="all-rides")
                    each ride in rides
                        .row.ride-container
                            .col-lg-12
                                .row.main-row
                                    .col-lg-4.ride-lg
                                        span #{ride.fromCity}
                                    .col-lg-1.ride-lg
                                        span.glyphicon.glyphicon-chevron-right
                                    .col-lg-4.ride-lg
                                        span #{ride.toCity}
                                    .col-lg-3.ride-lg
                                        span #{moment(ride.dateOfTravel).format("lll")}
                                hr
                                .row.secondary-row
                                    .col-lg-5.ride-md
                                        span Available seats:
                                        span  #{ride.freePlaces}
                                    .col-lg-4.ride-md
                                        span Price:
                                        span  #{ride.price}
                                    .col-lg-3.ride-md
                                        a(href=`/rides/${ride.id}`) Details

            script(type='text/javascript').
                    $(function () {
                    $('#startdatepicker').datetimepicker();
                    $('#enddatepicker').datetimepicker();
                    });

            script(type='text/javascript').
                jQuery(function($){
                $('.matchheight').matchHeight({byRow: false});
                });

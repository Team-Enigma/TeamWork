extends ../base

block app-title
        | rides

block content
        fieldset
                legend Find your ride to home:
                div.row
                        div.col-lg-3.form-group
                                label(class="col-lg-2 control-label") From city:
                                div(class="col-lg-10")
                                        input(class="input-sm", type="text")
                        div.col-lg-3.form-group
                                label(class="col-lg-2 control-label") To city:
                                div(class="col-lg-10")
                                        input(class="input-sm", type="text")
                        div.col-lg-3.form-group
                                label(class="col-lg-2 control-label") Date on:
                                div(class="col-lg-8")
                                        input(class="input-sm", type="text")
                        div.col-lg-3.form-group
                                a(href="#" class="btn btn-success") Search
        div(id="all-rides")
                ul
                each ride in rides
                        li(class="ride-info panel panel-info")
                                div.panel-heading
                                        p.text-center.text-bold From #{ride.fromCity} to #{ride.toCity} 
                                div.panel-body
                                        -var username = ride.driver.username
                                        p Date:#{moment(ride.dateOfTravel).calendar()}. 
                                        p There are #{ride.freePlaces} places left
                                        a(href="user/" + username) Driver: #{username}
                                        - var freePlaces = ride.freePlaces
                                        if freePlaces > 0
                                                a(href=`/rides/${ride.id}` class="btn btn-success") Travel with him/her
extends ../base

block app-title
        | Detailed message

block content
    div.ride-detailed-container
        .row
            .col-lg-12
                .row
                    .col-lg-5.font-lg
                        span #{message.name} (#{message.address})
                    .col-lg-4.font-lg
                        span #{message.title}
                    .col-lg-3.font-lg.text-center
                        span #{moment(message.sendOn).format("lll")}
                hr
                .row
                    .col-lg-9.font-md
                        span #{message.content}
                hr
                form.form-horizontal.form-container(id="update-message" action=`/admin/messages`, method="post")
                    label.col-lg-4.control-label(for="tb-message-status") Status
                    .col-lg-8
                        input(type="text", id="hidden-message-id" name="messageId" value=`${message.id}`)
                        select.form-control(id="tb-message-status", name="option")
                            option Not Processed
                            option In Process
                            option Processed

    script(type="text/javascript").
        jQuery(function($){
        $("#tb-message-status").change(function() {
                $("#update-message").submit();
            });
        });
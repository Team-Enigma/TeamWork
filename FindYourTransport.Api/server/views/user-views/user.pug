extends ../base

block app-title
        | information for user: #{user.username}
 
block content
        //- img.user-avatar(src=`${user.avatar}`, alt=`${user.username}'s avatar`)
        div.user-info
                p First name: #{user.firstName}
                p Last name: #{user.lastName}
                p Username: #{user.username}
                div.panel.panel-info(id="user-rides")
                        p.panel-heading.text-center Rides:
                        each ride in rides
                                .row.ride-container
                                        .col-lg-12
                                                .row.main-row
                                                .col-lg-4.ride-lg
                                                        span #{ride.fromCity}
                                                .col-lg-1.ride-lg
                                                        span.glyphicon.glyphicon-chevron-right
                                                .col-lg-4.ride-lg
                                                        span #{ride.toCity}
                                                .col-lg-3.ride-lg
                                                        span #{moment(ride.dateOfTravel).format("lll")}
                                                hr
                                                .row.secondary-row
                                                .col-lg-5.ride-md
                                                        span Available seats:
                                                        span  #{ride.freePlaces}
                                                .col-lg-4.ride-md
                                                        span Price:
                                                        span  #{ride.price}
                                                .col-lg-3.ride-md
                                                        a(href=`/rides/${ride.id}`) Details 


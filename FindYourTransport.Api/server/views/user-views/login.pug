extends ../base

block app-title
    | Login

block content
    include ../common/error-message
    .row
        .col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-offset-2.col-sm-8.col-xs-10.col-xs-offset-1
            form.form-horizontal.register-container(action='/login', method='post')
                fieldset
                    .form-group
                        label.col-lg-4.control-label(for='tb-username') Username
                        .col-lg-8
                            input.form-control(type="text", id="tb-first-name", name="username", placeholder="Username", value=username)
                    .form-group
                        label.col-lg-4.control-label(for="tb-password") Password
                        .col-lg-8
                            input.form-control(type="password", id="tb-password", name="password", placeholder="Password", value=password)
                    .form-group
                        .col-lg-8.col-lg-offset-4
                            input.btn.btn-sm.btn-primary.btn-lg.btn-block(type='submit', value="Login")
                    .col-lg-12.text-center
                        a(href="/register") Don't have an account? Register now.

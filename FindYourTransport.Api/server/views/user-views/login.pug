extends ../base

block app-title
    | Login
    
block content
    include ../common/error-message
    form(action="/login" method="post")
        label(for="tb-username") Username
        input(type="text" id="tb-username" name="username")
        br

        label(for="tb-password") Password
        input(type="password" id="tb-password" name="password")
        br

        input(type="submit" value="Submit")

        a(id="register-button", href="/register") Register
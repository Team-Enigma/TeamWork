extends ../base

block app-title
    | Register
    
block content
    include ../common/error-message
    form(action="/register" method="post")
        label(for="tb-first-name") FirstName
        input(type="text" id="tb-first-name" name="firstName" value=firstName)
        br

        label(for="tb-last-name") Last Name
        input(type="text" id="tb-last-name" name="lastName" value=lastName)
        br

        label(for="tb-email") Email address
        input(type="text" id="tb-email" name="email" value=email)
        br

        label(for="tb-username") Username
        input(type="text" id="tb-username" name="username" value=username)
        br

        label(for="tb-password") Password
        input(type="password" id="tb-password" name="password" value=password)
        br

        label(for="tb-confirm-password") Confirm Password
        input(type="password" id="tb-confirm-password" name="confirmPassword" value=confirmPassword)
        br

        input(type="submit" value="Submit")